  <%= link_to "Log In", new_user_session_path, class: "btn btn-info" %><br> <!-- ログイン画面に移行する -->
  <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %> <!-- 新規登録画面に移行する -->
  <!-- ユーザーがログインしていなかった時の処理 -->
<% end %>
